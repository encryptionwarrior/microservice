# Development Environment Variables
# This file contains working development settings
# Copy this to .env.development if using docker-compose env_file

NODE_ENV=development

# Database Configuration
DATABASE_URL_NOTES=postgresql://microservices:microservices123@postgres:5432/notes_db
DATABASE_URL_AUTH=postgresql://microservices:microservices123@postgres:5432/auth_db
POSTGRES_USER=microservices
POSTGRES_PASSWORD=microservices123
POSTGRES_DB=postgres

# CORS Configuration
# Allow localhost for development
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3003,http://localhost:5173,http://localhost:5174
CORS_CREDENTIALS=true

# JWT Configuration (WEAK KEYS - DEVELOPMENT ONLY!)
JWT_SECRET=dev-secret-key-not-for-production-12345
JWT_REFRESH_SECRET=dev-refresh-secret-not-for-production-67890
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Service Ports
AUTH_SERVICE_PORT=3001
NOTES_SERVICE_PORT=3003
TAGS_SERVICE_PORT=3004
AUDIT_SERVICE_PORT=3005
USER_SERVICE_PORT=3006
SEARCH_SERVICE_PORT=3007
GATEWAY_PORT=3000

# Logging Configuration
LOG_LEVEL=debug
ENABLE_QUERY_LOGGING=true

# Feature Flags (for development)
ENABLE_DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_API_DOCS=true
ENABLE_GRAPHQL_PLAYGROUND=true

# Development Tools
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true

# Rate Limiting (relaxed for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Redis (if using)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka (if using)
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=microservices-dev

# Email Service (development - use mailtrap or similar)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass
EMAIL_FROM=noreply@dev.localhost

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# Session
