{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node"],
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./"
    // "paths": {
    //   "@/*": ["src/*"],
    //   "@shared/*": ["../../shared/*"]
    // }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
  // "include": [
  //   "src/**/*",
  //   "../../shared/**/*",
  //   "prisma.config.ts"
  // ],
  // "exclude": [
  //   "node_modules",
  //   "dist",
  //   "**/*.test.ts"
  // ]
}
